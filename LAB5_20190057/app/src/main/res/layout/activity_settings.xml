<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar personalizada -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:background="@color/indigo_dark"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:layout_marginEnd="16dp"
                app:tint="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Configuraciones"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Formulario de configuraciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Título sección personal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información Personal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/indigo_light"
                android:layout_marginBottom="16dp" />

            <!-- Nombre del usuario -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="@android:color/holo_green_dark"
                app:hintTextColor="@android:color/holo_green_dark">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tu nombre (máx. 30 caracteres)"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:inputType="textPersonName|textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Mensaje motivacional -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:boxStrokeColor="@android:color/holo_green_dark"
                app:hintTextColor="@android:color/holo_green_dark">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMotivationalMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mensaje motivacional (máx. 150 caracteres)"
                    android:maxLines="3"
                    android:maxLength="150"
                    android:inputType="textCapSentences|textMultiLine" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Título sección notificaciones -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notificaciones Motivacionales"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/indigo_light"
                android:layout_marginBottom="16dp" />

            <!-- Mensaje motivacional personalizado -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="@android:color/holo_green_dark"
                app:hintTextColor="@android:color/holo_green_dark">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNotificationMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mensaje para notificaciones (máx. 120 caracteres)"
                    android:maxLines="2"
                    android:maxLength="120"
                    android:inputType="textCapSentences|textMultiLine" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Frecuencia de notificaciones motivacionales -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frecuencia de notificaciones motivacionales"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cada"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@android:color/holo_green_dark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNotificationFrequency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="4"
                        android:inputType="number"
                        android:maxLines="1"
                        android:maxLength="2"
                        android:textAlignment="center" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="horas"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnResetDefaults"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Valores por defecto"
                    android:textSize="14sp"
                    android:backgroundTint="@color/indigo_dark"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btnSaveSettings"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Guardar Cambios"
                    android:textSize="14sp"
                    android:backgroundTint="@color/indigo_light"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>